import sys
import re

def num_to_kanji(num_str):
    try:
        num = int(num_str)
    except ValueError:
        return num_str

    if num == 0:
        return "零"

    kanji_digits = ["", "一", "二", "三", "四", "五", "六", "七", "八", "九"]
    kanji_units = ["", "十", "百", "千"]
    kanji_big_units = ["", "万", "億", "兆", "京"]

    result = ""
    chunk_count = 0
    while num > 0:
        chunk = num % 10000
        if chunk > 0:
            chunk_str = ""
            digit_count = 0
            while chunk > 0:
                digit = chunk % 10
                if digit > 0:
                    prefix = kanji_digits[digit]
                    if digit == 1 and digit_count > 0:
                         prefix = "" 
                    chunk_str = prefix + kanji_units[digit_count] + chunk_str
                chunk //= 10
                digit_count += 1
            result = chunk_str + kanji_big_units[chunk_count] + result
        num //= 10000
        chunk_count += 1
    return result

def main():
    for line in sys.stdin:
        line = line.strip()
        converted_line = re.sub(r'\d+', lambda m: num_to_kanji(m.group(0)), line)
        print(converted_line)

if __name__ == '__main__':
    main()
